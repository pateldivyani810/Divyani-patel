{% comment %} <section class="gift-banner-header">
  <div class="gift-banner__top">
    <div class="gift-banner__logo">{{ section.settings.logo_text }}</div>
    <div class="gift-banner__small-text">{{ section.settings.top_text }}</div>
    <a href="#" class="gift-banner__choose-btn">
      {{ section.settings.choose_gift_text }}
      <span class="arrow">→</span>
    </a>
  </div>
  <div class="overlay-banner">
  
   </div>
    <div class="gift-banner__overlay">
      <div class="gift-banner__content gift-banner__content--{{ section.settings.content_alignment }}">
          {% if section.settings.heading != blank %}
            <h1 class="gift-banner__heading">{{ section.settings.heading }}</h1>
          {% endif %}

          {% if section.settings.subheading != blank %}
            <p class="gift-banner__subheading">{{ section.settings.subheading }}</p>
          {% endif %}

          {% if section.settings.button_text != blank %}
            <a href="{{ section.settings.shop_button_link }}" class="gift-banner__button">
              {{ section.settings.button_text }}
              <span class="arrow">→</span>
            </a>
          {% endif %}
      </div>
    </div>
  <div class="gift-banner__bottom">
     {{ section.settings.bottom_text }}
  </div>
</section>
{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "top_text",
      "label": "Top Small Text",
      "default": "Find the ideal gift for your loved ones."
    },
       {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Background Image"
    },
    {
      "type": "text",
      "id": "choose_gift_text",
      "label": "Choose Gift Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Sub Description",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Shop Now Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "shop_button_link",
      "label": "Shop Button Link"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "default": "center",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-right", "label": "Bottom Right" },
        { "value": "center", "label": "Center" }
      ]
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom Small Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner"
    }
  ]
}
{% endschema %} {% endcomment %}
<div class="slideshow-banner">
  <div class="slideshow-banner__wrapper">
    {% for block in section.blocks %}
      <div class="slideshow-banner__slide" 
           style="background-image: url({{ block.settings.slide_image | img_url: '1600x' }});">
        <div class="slideshow-banner__overlay"></div>
        <div class="slideshow-banner__content slideshow-banner__content--{{ block.settings.content_alignment }}">
          {% if block.settings.slide_heading != blank %}
            <h2>{{ block.settings.slide_heading }}</h2>
          {% endif %}
          {% if block.settings.slide_subheading != blank %}
            <p>{{ block.settings.slide_subheading }}</p>
          {% endif %}
          {% if block.settings.slide_link != blank %}
            <a href="{{ block.settings.slide_link }}" class="slideshow-banner__button">
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
.slideshow-banner {
  position: relative;
  overflow: hidden;
}
.slideshow-banner__wrapper {
  display: flex;
  width: 100%;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
}
.slideshow-banner__slide {
  flex: 0 0 100%;
  position: relative;
  background-size: cover;
  background-position: center;
  min-height: 500px;
  scroll-snap-align: start;
}
.slideshow-banner__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.4);
}
.slideshow-banner__content {
  position: absolute;
  z-index: 2;
  color: #fff;
  padding: 20px;
  max-width: 600px;
}
/* Alignment options */
.slideshow-banner__content--top-left { top: 20px; left: 20px; text-align: left; }
.slideshow-banner__content--top-right { top: 20px; right: 20px; text-align: right; }
.slideshow-banner__content--bottom-left { bottom: 20px; left: 20px; text-align: left; }
.slideshow-banner__content--bottom-right { bottom: 20px; right: 20px; text-align: right; }
.slideshow-banner__content--center { top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; }

.slideshow-banner__button {
  display: inline-block;
  margin-top: 15px;
  padding: 12px 30px;
  background: #ff6f61;
  color: white;
  text-decoration: none;
  border-radius: 6px;
}
{% endstylesheet %}

