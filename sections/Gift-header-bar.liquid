<section class="gift-guide-header" style="background: {{ section.settings.background_color }} {% if section.settings.background_image != blank %}url('{{ section.settings.background_image | image_url: width: 1600 }}') no-repeat center/cover{% endif %};"
>
  <div class="gift-guide-banner__container alignment-{{ section.settings.content_alignment }}">
    <h2 class="gift-guide-banner__heading">{{ section.settings.heading }}</h2>
    <p class="gift-guide-banner__subheading">{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="gift-guide-banner__btn">
      {{ section.settings.button_label }}
    </a>

    <!-- Mobile Dropdown -->
    <div class="gift-guide-header__mobile-menu">
      <p>{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="gift-guide-header__btn">
        {{ section.settings.button_label }}
      </a>
    </div>
    {%- comment -%} Mobile toggle button {%- endcomment -%}
    <button
      id="gift-toggle-{{ section.id }}"
      class="gift-guide-banner__toggle"
      type="button"
      aria-expanded="false"
      aria-controls="gift-menu-{{ section.id }}"
      aria-label="Toggle message"
    >â˜°</button>
  </div>
  {%- comment -%} Mobile dropdown content {%- endcomment -%}
  <div
    id="gift-menu-{{ section.id }}"
    class="gift-guide-banner__mobile-menu"
    hidden
  >
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="gift-guide-banner__btn">
      {{ section.settings.button_label }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Gift Guide header",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "CHOOSE GIFT â†’"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide header",
      "category": "Custom"
    }
  ]
}
{% endschema %}


<style>
.gift-guide-header {
  width: 100%;
  border-bottom: 1px solid #eee;
  font-family: Arial, sans-serif;
}
.gift-guide-header__mobile-menu {
    display: none;
}
.gift-guide-header__container {
  max-width: 1200px;
  margin: 0 auto;
  flex-wrap: wrap;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  background-color: #F5F5F5;
  padding: 10px 15px;  
}
.gift-guide-header__heading {
     margin: 0;
    font-weight: 700;
    color: #000;
    font-size: 24px;
}
.gift-guide-header__subheading {
  font-size: 16px;
  margin: 0 1rem;
  flex: 1;
  text-align: center;
}
.gift-guide-header__btn {
   background: #ffeb3b;
  padding: 10px 20px;
  font-weight: bold;
  text-decoration: none;
  color: black;
  border-radius: 4px;
  transition: all 0.3s ease;
}
.gift-guide-header__btn:hover {
   background: black;
  color: white;
  transform: scale(1.05);
}
.gift-guide-header__toggle {
  display: none;
  font-size: 1.4rem;
  background: none;
  border: none;
  cursor: pointer;
}

/* alignment */
.alignment-left { text-align: left; }
.alignment-center { text-align: center; }
.alignment-right { text-align: right; }

/* ðŸ“± Mobile */
@media (max-width: 768px) {
  .gift-guide-header__subheading,
  .gift-guide-header__btn {
    display: none;
  }
  .gift-guide-header__toggle {
    display: block;
  }
  .gift-guide-header__mobile-menu {
    display: none;
    background: #f9f9f9;
    padding: 1rem;
    text-align: center;
    border-top: 1px solid #eee;
  }
  .gift-guide-header__mobile-menu.show {
    display: block;
    animation: slideDown 0.3s ease-out;
  }
  .gift-guide-header__container {
    flex-direction: row-reverse;
    justify-content: flex-end;
}
.gift-guide-header__mobile-menu.show p, .gift-guide-header__mobile-menu.show a {
    display: block;
}
  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
}
/* hidden by default; 'hidden' attribute is used for a11y */
.gift-guide-banner__mobile-menu { padding: 1rem; text-align: center; background:#f9f9f9; border-top:1px solid #eee; }
.gift-guide-banner__mobile-menu.show { animation: slideDown .25s ease-out; }
@keyframes slideDown { from {opacity:0; transform:translateY(-6px);} to {opacity:1; transform:translateY(0);} }

@media (min-width: 769px){
  /* desktop never shows mobile menu */
  #shopify-section-{{ section.id }} .gift-guide-banner__mobile-menu { display:none !important; }
  #shopify-section-{{ section.id }} .gift-guide-banner__toggle { display:none !important; }
}
</style>

<script>
(function(){
  'use strict';

  // Initialize one specific section instance
  function initGiftBanner(sectionEl){
    if (!sectionEl) return;

    // guard against double-binding when Theme Editor re-renders
    if (sectionEl.__giftBannerBound) return;
    sectionEl.__giftBannerBound = true;

    const toggle = sectionEl.querySelector('#gift-toggle-{{ section.id }}');
    const menu   = sectionEl.querySelector('#gift-menu-{{ section.id }}');
    if (!toggle || !menu) return;

    function setOpen(open){
      if (open){
        menu.removeAttribute('hidden');
        menu.classList.add('show');
      } else {
        menu.setAttribute('hidden', '');
        menu.classList.remove('show');
      }
      toggle.setAttribute('aria-expanded', open ? 'true' : 'false');
    }

    // Toggle click
    toggle.addEventListener('click', function(){
      const open = menu.hasAttribute('hidden');
      setOpen(open);
    });

    // Click outside to close
    document.addEventListener('click', function(e){
      if (!sectionEl.contains(e.target)) setOpen(false);
    });

    // ESC to close
    sectionEl.addEventListener('keydown', function(e){
      if (e.key === 'Escape') setOpen(false);
    });
  }

  // Find this section wrapper (Shopify wraps sections with #shopify-section-<id>)
  var sectionWrapper = document.getElementById('shopify-section-{{ section.id }}') || document.currentScript.closest('section');
  if (sectionWrapper) initGiftBanner(sectionWrapper);

  // Re-init when the Theme Editor reloads this section
  document.addEventListener('shopify:section:load', function(evt){
    if (evt.detail && evt.detail.sectionId === '{{ section.id }}'){
      var el = document.getElementById('shopify-section-{{ section.id }}');
      initGiftBanner(el);
    }
  });
})();
</script>

