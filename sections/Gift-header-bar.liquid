<section class="gift-guide-header" style="background: {{ section.settings.background_color }} {% if section.settings.background_image != blank %}url('{{ section.settings.background_image | image_url: width: 1600 }}') no-repeat center/cover{% endif %};"
>
  <div class="gift-guide-header__container alignment-{{ section.settings.content_alignment }}">
    <h2 class="gift-guide-header__heading">{{ section.settings.heading }}</h2>
    <p class="gift-guide-header__subheading">{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="gift-guide-header__btn">
      {{ section.settings.button_label }}
    </a>

    <!-- Mobile Toggle -->
    <button class="gift-guide-header__toggle" aria-label="Toggle Menu">â˜°</button>
  </div>

  <!-- Mobile Dropdown -->
  <div class="gift-guide-header__mobile-menu">
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="gift-guide-header__btn">
      {{ section.settings.button_label }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Gift Guide header",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "CHOOSE GIFT â†’"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide header",
      "category": "Custom"
    }
  ]
}
{% endschema %}


<style>
.gift-guide-header {
  width: 100%;
  border-bottom: 1px solid #eee;
  padding: 1rem 1.5rem;
  font-family: Arial, sans-serif;
}
.gift-guide-header__container {
  max-width: 1200px;
  margin: 0 auto;
  flex-wrap: wrap;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  background-color: #F5F5F5;
  padding: 10px 15px;  
}
.gift-guide-header__heading {
     margin: 0;
    font-weight: 700;
    color: #000;
    font-size: 24px;
}
.gift-guide-header__subheading {
  font-size: 16px;
  margin: 0 1rem;
  flex: 1;
  text-align: center;
}
.gift-guide-header__btn {
   background: #ffeb3b;
  padding: 10px 20px;
  font-weight: bold;
  text-decoration: none;
  color: black;
  border-radius: 4px;
  transition: all 0.3s ease;
}
.gift-guide-header__btn:hover {
   background: black;
  color: white;
  transform: scale(1.05);
}
.gift-guide-header__toggle {
  display: none;
  font-size: 1.4rem;
  background: none;
  border: none;
  cursor: pointer;
}

/* alignment */
.alignment-left { text-align: left; }
.alignment-center { text-align: center; }
.alignment-right { text-align: right; }

/* ðŸ“± Mobile */
@media (max-width: 768px) {
  .gift-guide-header__subheading,
  .gift-guide-header__btn {
    display: none;
  }
  .gift-guide-header__toggle {
    display: block;
  }
  .gift-guide-header__mobile-menu {
    display: none;
    background: #f9f9f9;
    padding: 1rem;
    text-align: center;
    border-top: 1px solid #eee;
  }
  .gift-guide-header__mobile-menu.show {
    display: block;
    animation: slideDown 0.3s ease-out;
  }
  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
  const toggle = document.querySelector(".gift-guide-header__toggle");
  const menu = document.querySelector(".gift-guide-header__mobile-menu");
  if (toggle && menu) {
    toggle.addEventListener("click", function () {
      menu.classList.toggle("show");
    });
  }
});
</script>


